<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#efebe9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saurabh.helloandroid.MainActivity"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@drawable/udacity" />

    <TextView
        android:id="@+id/text1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="45sp"
        android:paddingStart="25dp"
        android:textColor="#00BCD4"
        android:layout_below="@id/image_view"
        android:text="@string/udacity" />
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:textColor="#00BCD4"
        android:paddingStart="25sp"
        android:textSize="20sp"
        android:text="2465 Latham St\nMountain View, CA 94043"/>
    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:textColor="#00BCD4"
        android:textSize="20sp"
        android:paddingStart="25dp"
        android:autoLink="phone"
        android:clickable="true"
        android:text="650-555-5555" />
    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:textColor="#00BCD4"
        android:textSize="20sp"
        android:paddingStart="25dp"
        android:autoLink="web"
        android:clickable="true"
        android:text="www.udacity.com" />


</RelativeLayout>
